<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_image"
        android:ellipsize="end"
        android:maxEms="9"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tv_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_image"
        android:ellipsize="end"

        android:maxEms="11"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tv_prices1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_brief"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_image"
        android:textColor="#ffa042"

        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_prices2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_brief"

        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_prices1"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="65dp"

        />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_per"
        android:layout_marginRight="5dp"

        />

    <ImageView
        android:id="@+id/iv_dianzan"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/dianzana"/>

    <TextView
        android:id="@+id/tv_dianzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/iv_dianzan"
        />
</RelativeLayout>