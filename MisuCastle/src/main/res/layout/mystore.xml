<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFA042"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_store"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:drawableLeft="@mipmap/toleft"
            android:gravity="center"
            android:text="店铺管理"
            android:textColorLink="#ffffff"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="#f1eae4"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/pia"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/yuanjiao"
            android:drawableTop="@mipmap/pictureaa"
            android:gravity="center"
            android:text="10张"
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/ll_rank"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_store"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/ll_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/room_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1">

            </RatingBar>

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="#000000"/>
        </LinearLayout>
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/store_details"
            style="@style/RadioButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/radiobutton_new"
            android:gravity="center"
            android:text="店铺详情"/>


        <RadioButton
            android:id="@+id/store_evaluate"
            style="@style/RadioButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/radiobutton_new"
            android:gravity="center"
            android:text="评价"/>


    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>


</LinearLayout>