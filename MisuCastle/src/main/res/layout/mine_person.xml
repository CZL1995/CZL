<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFEEDD"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title123"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFA042"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/person_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@mipmap/back"/>

        <TextView
            android:id="@+id/ziliao"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="个人资料"
            android:textColorLink="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>

    <com.caozhiliang.view.SortList
        android:id="@+id/person_one"
        style="@style/sort_sortlist_style"
        android:layout_gravity="top"
        android:layout_marginTop="10dip">

    </com.caozhiliang.view.SortList>

    <com.caozhiliang.view.SortList
        android:id="@+id/person_two"
        style="@style/sort_sortlist_style"
        android:layout_gravity="center"
        android:layout_marginTop="10dip">

    </com.caozhiliang.view.SortList>

    <com.caozhiliang.view.SortList
        android:id="@+id/person_three"
        style="@style/sort_sortlist_style"
        android:layout_marginTop="10dip">
    </com.caozhiliang.view.SortList>

    <Button
        android:id="@+id/tuichu_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/item_button_red"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="退出账号"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

</LinearLayout>