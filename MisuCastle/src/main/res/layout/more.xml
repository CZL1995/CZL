<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFA042"

        android:gravity="center"
        android:padding="10dp"
        android:text="我的"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEEDD"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/imageButton_denglu"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/tx"/>

        <TextView
            android:id="@+id/dianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEEDD"
        android:orientation="vertical"
        >
        <com.caozhiliang.view.SortList
            android:id="@+id/more_listTop"
            style="@style/sort_sortlist_style"
            android:layout_gravity="top"
            android:layout_marginTop="10dip">

        </com.caozhiliang.view.SortList>

        <com.caozhiliang.view.SortList
            android:id="@+id/more_list"
            style="@style/sort_sortlist_style"
            android:layout_gravity="center"
            android:layout_marginTop="10dip">

        </com.caozhiliang.view.SortList>

        <com.caozhiliang.view.SortList
            android:id="@+id/more_listBom"
            style="@style/sort_sortlist_style"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dip">
        </com.caozhiliang.view.SortList>

    </LinearLayout>

</LinearLayout>