<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#ffa042"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_commodity"
            style="@style/Title"
            android:text="商品管理" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View style="@style/Line" />

        <TextView
            android:id="@+id/store"
            style="@style/MerchantHomeShort"
            android:layout_marginLeft="10dp"
            android:background="#f1e6d3"
            android:drawableLeft="@mipmap/signboard"
            android:text="招牌蛋糕" />

        <View style="@style/Line" />

        <View
            style="@style/Line"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/commodity"
            style="@style/MerchantHomeShort"
            android:layout_marginLeft="10dp"
            android:background="#f1e6d3"
            android:drawableLeft="@mipmap/recommend"
            android:text="店主力荐" />

        <View style="@style/Line" />

        <View
            style="@style/Line"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/account"
            style="@style/MerchantHomeShort"
            android:layout_marginLeft="10dp"
            android:background="#f1e6d3"
            android:drawableLeft="@mipmap/characteristic"
            android:text="本店特色" />

        <View style="@style/Line" />

        <View
            style="@style/Line"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/setting"
            style="@style/MerchantHomeShort"
            android:layout_marginLeft="10dp"
            android:background="#f1e6d3"
            android:drawableLeft="@mipmap/hot_product"
            android:text="热销产品" />

        <View style="@style/Line" />

        <View
            style="@style/Line"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/ourpartner"
            style="@style/MerchantHomeShort"
            android:layout_marginLeft="10dp"
            android:background="#f1e6d3"
            android:drawableLeft="@mipmap/preferencs"
            android:text="特惠活动" />

        <View style="@style/Line" />

    </LinearLayout>

</LinearLayout>