<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_order"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFA042"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:drawableLeft="@mipmap/toleft"
            android:gravity="center"
            android:text="提交订单"
            android:textColorLink="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_order"
        android:layout_marginTop="10dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_trade_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@mipmap/loge"/>

        <TextView
            android:id="@+id/tv_trade_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_trade_image"
            />

        <TextView
            android:id="@+id/tradeprices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_order"
        android:layout_marginTop="10dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl111"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="10dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="数量"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_new"
            android:src="@mipmap/increase"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/increase"
            />

        <ImageButton
            android:id="@+id/iv_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/number"
            android:background="@drawable/button_new"
            android:src="@mipmap/decrease"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl4"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl1211"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl12"
        android:layout_marginTop="10dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:id="@+id/rl121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="配送方式"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_devider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="快递 免邮"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl122q"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl121"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl122"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl122q"
        android:layout_marginTop="10dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:id="@+id/rl43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="买家留言："
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/ed_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/notes"
            android:background="@null"
            android:hint="买家留言12"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl14"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl43"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl1211q"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl14"
        android:layout_marginTop="10dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:id="@+id/rlll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/notes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="小计"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#FFA042"
            android:textSize="18dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl143"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlll"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl14332"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl143"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:id="@+id/rl1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_buypeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_buyaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_buypeople"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="11"
            android:singleLine="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/toright"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl1433"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1111"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl143322"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1433"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:id="@+id/rlqwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="匿名购买"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl14333"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlqwe"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:id="@+id/rl1433221"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl14333"
        android:layout_marginTop="5dp"
        android:background="#e2dcdc"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/total_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/button_bug"
            android:text="合计：178"/>

        <Button
            android:id="@+id/button_bug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_new"
            android:text="确认"/>
    </RelativeLayout>
</LinearLayout>