<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/splashbackground"
                android:orientation="vertical"
                android:id="@+id/rl_splash"
    >

    <ProgressBar
        android:id="@+id/pb_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"/>

    <TextView
        android:id="@+id/tv_versioncode_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pb_splash"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pb_splash"
        android:layout_marginBottom="38dp"
        android:shadowColor="#efb7a7"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        />
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="下载进度:"
        android:textColor="#FF6347"
        android:visibility="gone"
        />

</RelativeLayout>