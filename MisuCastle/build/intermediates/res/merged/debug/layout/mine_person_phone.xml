<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title2"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFA042"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/toleft"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="修改手机号码"
            android:textColorLink="#ffffff"
            android:textSize="20sp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/mine_person_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="请输入新的号码"
        android:inputType="phone"
        android:textColorHint="#bebebe">

        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/minephonegai"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_button_person"
        android:onClick="true"
        android:text="保存"
        android:textColor="#330000"/>


</LinearLayout>
